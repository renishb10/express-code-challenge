{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Express Code Challenge",
    "description": "A coding challenge to assess your ability to navigate an express server implementation."
  },
  "host": "localhost:3000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "users",
      "description": "Handles new users creation and authentication"
    },
    {
      "name": "books",
      "description": "Handles book listings [Secured]"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/users/create": {
      "post": {
        "tags": ["users"],
        "description": "Create a new user",
        "parameters": [
          {
            "name": "body",
            "description": "User object",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "default": {
            "description": "Error"
          }
        }
      }
    },
    "/users/signin": {
      "post": {
        "tags": ["users"],
        "description": "Authenticates the user",
        "parameters": [
          {
            "name": "body",
            "description": "Login object",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "default": {
            "description": "Error"
          }
        }
      }
    },
    "/books": {
      "get": {
        "tags": ["books"],
        "description": "Get the list of books for the given user",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Bearer Token",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "default": {
            "description": "Error"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "string"
        },
        "password": {
          "type": "string",
          "format": "string"
        },
        "name": {
          "type": "string",
          "format": "string"
        },
        "role": {
          "type": "string",
          "format": "string"
        }
      }
    },
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "string"
        },
        "password": {
          "type": "string",
          "format": "string"
        }
      }
    },
    "Book": {
      "type": "object",
      "properties": {
        "isbn": {
          "type": "string",
          "format": "string"
        },
        "title": {
          "type": "string",
          "format": "string"
        },
        "author": {
          "type": "string",
          "format": "string"
        }
      }
    }
  }
}
